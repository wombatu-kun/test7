<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>ws</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/src</directory>
            <outputDirectory>/sources/manufacture-rest/src</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/sources/manufacture-rest</outputDirectory>
            <includes>
                <include>assembly-zip-with-sources.xml</include>
                <include>pom.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../manufacture-dao/src</directory>
            <outputDirectory>/sources/manufacture-dao/src</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../manufacture-dto</directory>
            <outputDirectory>/sources/manufacture-dto</outputDirectory>
            <includes>
                <include>pom.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../manufacture-dto/src</directory>
            <outputDirectory>/sources/manufacture-dto/src</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../manufacture-dao</directory>
            <outputDirectory>/sources/manufacture-dao</outputDirectory>
            <includes>
                <include>pom.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/..</directory>
            <outputDirectory>/sources</outputDirectory>
            <includes>
                <include>pom.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target/lib</directory>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.basedir}/target/manufacture.jar</source>
            <outputDirectory>/</outputDirectory>
            <destName>manufacture.jar</destName>
        </file>
    </files>
</assembly>
